<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ODNDToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- HERE ARE THE CHANGES - Change color of different texts -->
        <item name="android:textColorPrimary">@color/offduty_color</item>
        <item name="colorControlNormal">@color/whiteColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="homeToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- HERE ARE THE CHANGES - Change color of different texts -->
        <item name="android:textColorPrimary">@color/whiteColor</item>
        <item name="colorControlNormal">@color/whiteColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="HomeExpandedToolBarTitleTheme" parent="android:TextAppearance">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="HomeCollapsedToolBarTitleTheme" parent="android:TextAppearance">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DrivingExpandedToolBarTitleTheme" parent="android:TextAppearance">
        <item name="android:textColor">@color/greenColor</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="DrivingCollapsedToolBarTitleTheme" parent="android:TextAppearance">
        <item name="android:textColor">@color/greenColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ExpandedToolBarTitleTheme" parent="android:TextAppearance">
        <item name="android:textColor">@color/yellowColor</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="OffDutyExpandedToolBarTitleTheme" parent="android:TextAppearance">
        <item name="android:textColor">@color/offduty_color</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="odndCollapsedToolBarTitleTheme" parent="android:TextAppearance">
        <item name="android:textColor">@color/odnd_color</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="odndExpandedToolBarTitleTheme" parent="android:TextAppearance">
        <item name="android:textColor">@color/odnd_color</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="okButtonIcon"  parent="Widget.AppCompat.ImageButton" >
        <item name="android:src">@drawable/ic_check_24dp</item>
        <item name="android:contentDescription">Check Button</item>
    </style>

    <style name="table_even_row" >
        <item name="android:background">@color/even_row_bgcolor</item>
    </style>
    <style name="table_odd_row" >
        <item name="android:background">@color/odd_row_bgcolor</item>
    </style>

</resources>